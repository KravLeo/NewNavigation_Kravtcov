<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NewNavigation_Kravtcov.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NewNavigation_Kravtcov.mvvm.View"
    Shell.FlyoutBehavior="Disabled"
    Title="NewNavigation_Kravtcov">
    <ShellContent 
        Title="Main" 
        ContentTemplate="{DataTemplate local:MainPage}" 
        Route="MainPage" />
    <ShellContent 
        Title="Departments" 
        ContentTemplate="{DataTemplate local:DepPage}" 
        Route="DepPage" />
    <ShellContent 
        Title="Employees" 
        ContentTemplate="{DataTemplate local:EmplPage}" 
        Route="EmplPage" />
</Shell>
