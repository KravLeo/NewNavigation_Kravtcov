<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NewNavigation_Kravtcov.mvvm.View.RegisterPage"
             Title="RegisterPage">
    <StackLayout Padding="20">
        <Entry Placeholder="Имя" />
        <Entry Placeholder="Логин" />
        <Entry Placeholder="Пароль" IsPassword="True" />
        <Button Text="Зарегистрироваться" Command="{Binding RegisterCommand}" />
        <Button Text="Назад" Command="{Binding GoBackCommand}" />
    </StackLayout>
</ContentPage>